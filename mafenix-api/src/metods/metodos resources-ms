/////////////Get todos los cursos//////////////
query{
  allCourses(page:1){
    id
    name
    description
    code
    teacher_has_courses {
      id
      teacher_id
      teacher_name
      teacher_description
      course_id
      course_name
      course_description
      course_code
    }
    course_has_resources {
      id
      resource_id
      resource_name
      resource_description
      resource_link
      course_id
      course_name
      course_description
      course_code
    }
  }
}
