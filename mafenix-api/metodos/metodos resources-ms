/////////////crear recurso///////////////////////
mutation{
	createResource(resource:{
	name: "nombreeee"
  description:"descripccciooon"
	link: "Este es el linkasdasd"
	}){
    id
    name
    description
	  created_at
	}
}

/////////////////modificar recurso//////////////

mutation{
  updateResource(id:60,resource:{
    name: "Nuevo recursodasdasd"
    description:"Descirpcionasdasdasd del recurso"
    link: "Este es el linkasdasd"
  }){
    id
    name
    description
    link
    created_at
  }
}
/////////////buscar recurso////////////////
query{
  resourceByName(resource:{
    resource_name: "Nuevo recurso" 
  }){
    id
    name
    description
    created_at
  }
}
////////////buscar curso///////////////////
query{
  courseByName(course:{
    course_name: "Gerencia de recursos humanos" 
  }){
    id
    name
    description
    code
  }
}
/////////////buscar profesor//////////////
query{
  teacherByName(teacher:{
    teacher_name: "HUGO ALBERTO HERRERA FONSECA" 
  }){
    id
    name
    description
    
  }
}

# Delete all containers
docker rm $(docker ps -aq)
# Delete all images
docker rmi $(docker images -q)
# Delete all untagged images
docker rmi $(docker images -q --filter "dangling=true")



