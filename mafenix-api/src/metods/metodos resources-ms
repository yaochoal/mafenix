/////////////crear recurso///////////////////////
mutation{
  createResource(resource:{
    name: "Nuevo recurso"
    description:"Descripcion del recurso"
    
  }){
    id
    name
    description
    created_at
  }
}

/////////////////modificar recurso//////////////

mutation{
  updateResource(id:60,resource:{
    name: "Nuevo recursodasdasd"
    description:"Descirpcionasdasdasd del recurso"
    
  }){
    id
    name
    description
    created_at
  }
}
/////////////buscar recurso////////////////
query{
  resourceByName(resource:{
    resource_name: "Nuevo recurso" 
  }){
    id
    name
    description
    created_at
  }
}
